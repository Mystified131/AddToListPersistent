
@model WebApplication2.ViewModels.EditSelectViewModel

@{
    ViewData["Title"] = "Select Item To Edit";
}

<h2>Select Item To Edit</h2>

<div>
    <form action='EditSelect' method='POST' align="left">
        <label>
            Which item would you like to edit?
        </label><br><br />
        <select name="NewElement1">
            @foreach (var item in Model.TheList)
            {
                <option value=@item.ID>@item.Element</option>}
        </select>

        <br /><br />
        <input type="submit" value="Edit Item" />
    </form>
</div>

